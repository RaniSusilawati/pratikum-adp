#include <iostream>
#include <cmath>

using namespace std;



int main() {
    double r, t, v, LP, c;

    cout << "masukkan rusuk alas= ";
    cin >> r;
    cout << "masukkan tinggi limas= ";
    cin >> t;
    v = (double) 1 / 3 * r * r * t;
    c = sqrt(t * t + 0.5 * r * (0.5 * r));
    LP = r * r + 4 * (0.5 * r * c);
    cout << "volume limas segi empat beraturan= " << v << endl;
    cout << "luas permukaan limas segi empat beraturan= " << LP << endl;

}
